generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" //Change to postgresql at the end
  url      = env("DATABASE_URL")
}

model Usuario {
  id      String   @id @default(uuid())
  nome    String
  email   String   @unique
  senha   String
  cordeis Cordel[]

  @@map("usuarios")
}

model Cordel {
  id        Int     @id @default(autoincrement())
  titulo    String  @unique
  autor     Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String

  @@map("cordeis")
}
